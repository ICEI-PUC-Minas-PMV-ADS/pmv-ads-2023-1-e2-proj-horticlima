@model Horticlima.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioNome)
        </dd>

        @if (Model.Perfil == Perfil.Gerente)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CNPJ)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CNPJ)
            </dd>
        }

        @if (Model.Perfil == Perfil.User)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CPF)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CPF)
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-info rounded-pill px-3 " asp-action="Edit" asp-route-id="@Model.UsuarioId">Editar</a>
    <a class="btn btn-outline-info rounded-pill px-3 mx-3" asp-action="Delete" asp-route-id="@Model.UsuarioId">Deletar</a>
</div>
    <a class="btn btn-danger rounded-pill px-3 my-3" asp-action="Index"> Voltar </a>
