                            <a asp-action="Delete" asp-route-id="@item.ProdutoId">Deletar</a>
                        </div>
                    </div>
                </div>
            }

        }
    </div>


    <a name="Verduras"> <h2 class="mt-4 mb-4"> Verduras </h2> </a>
